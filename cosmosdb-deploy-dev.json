{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "eshopCosmosdbAcc": {
      "type": "string",
      "defaultValue": "eshop-cosmosdb-dev"
    },
    "eshopCosmosdbDatabase": {
      "type": "string",
      "defaultValue": "eshopdb"
    },
    "eshopCosmosdbProductsContainer": {
      "type": "string",
      "defaultValue": "products"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "variables": {
    "eshopCosmosdbAccFullName": "[concat(parameters('eshopCosmosdbAcc'), '-', parameters('environment'))]"
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2021-04-15",
      "name": "[variables('eshopCosmosdbAccFullName')]",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "locations": [
          {
            "locationName": "[parameters('location')]",
            "failoverPriority": 0,
            "isZoneRedundant": false  
          }
        ],
        "enableMultipleWriteLocations": false,
        "enableAutomaticFailover": false
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases",
      "apiVersion": "2021-04-15",
      "name": "[format('{0}/{1}', variables('eshopCosmosdbAccFullName'), parameters('eshopCosmosdbDatabase'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', variables('eshopCosmosdbAccFullName'))]"
      ],
      "properties": {
        "resource": {
          "id": "[parameters('eshopCosmosdbDatabase')]"
        },
        "options": {}
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
      "apiVersion": "2021-04-15",
      "name": "[format('{0}/{1}/{2}', variables('eshopCosmosdbAccFullName'), parameters('eshopCosmosdbDatabase'), parameters('eshopCosmosdbProductsContainer'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('eshopCosmosdbAccFullName'), parameters('eshopCosmosdbDatabase'))]"
      ],
      "properties": {
        "resource": {
          "id": "[parameters('eshopCosmosdbProductsContainer')]",
          "partitionKey": {
            "paths": [
              "/id"
            ],
            "kind": "Hash"
          }
        },
        "options": {}
      }
    }
  ]
}
